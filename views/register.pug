extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='name')
          div.form-group
            label(for='heroName') Hero Name:
            input#heroName.form-control(type='text', placeholder="for example 'the Flash'" name='heroName')
          div.form-group
            label(for='superpower') Superpower:
            input#favoriteBook.form-control(type='text', placeholder="hero's superpower" name='superpower')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up